<script type="text/javascript">
    $(document).ready(function () {

        // have all links use a new window
        $('a').attr("target", "_blank");

        // active a toast
        $("#liveToastBtn").click(function () {
            $('.toast').toast('show');
        });

        // override toast default timeout, can also be done via data attributes
        //      data - delay="2000" data-autohide="false"
        $('.toast').toast({ delay: 2000, animation: false });
    });
</script>