@page

@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="css/bootstrap-dialog.min.css" />
<script src="lib/jquery/dist/jquery.min.js"></script>
<script src="js/umd/popper.min.js"></script>
<script src="js/bootstrap-dialog.js"></script>
<link rel="stylesheet" href="css/offCanvas.css" />
<link rel="stylesheet" href="bootstrap/css/bootstrap-icons.css" />
<script src="js/index.js"></script>
<link rel="stylesheet" href="css/index.css" />

<div class="container">

    <div class="row">
        <div class="col-3 border border-primary border-3">
            <div class="circle ml-4 border border-danger border-3">OED</div>
        </div>
    </div>

    <div class="container m-lg-5">

        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">

            <div class="offcanvas-header">
                <h5 id="offcanvasRightLabel">Side bar</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>

            <div class="offcanvas-body">
                @* Here we insert content from another page where the model is a simple string *@
                <partial name="PartialDemo" model=@("Oops! Page Not Found") />
            </div>

        </div>

    </div>



    <div class="row">
        @* Demo for bootstrap model via script  *@
        <div class="col-3  border border-danger">
            <button type="button" id="clicker" class="btn btn-primary w-100">Bootstrap dialog w/o divs</button>
        </div>
        @* Demo for bootstrap off-canvas via script  *@
        <div class="col-3  border border-danger">
            <button class="btn btn-primary w-100" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Side bar example</button>
        </div>
        <div class="col-3  border border-danger">
            <button type="button" id="dummy" class="btn btn-primary w-100">Empty</button>
        </div>
    </div>

</div>


@*
    Simple example for setting ViewData

    Flex: Quickly manage the layout, alignment, and sizing of grid columns, navigation, components
        d-flex
        justify-content-center
        flex-nowrap

    Spacing: shorthand responsive margin, padding, and gap utility classes to modify an element’s appearance.
        mx-2
        p-2

*@
<div class="d-flex justify-content-center flex-nowrap mt-4 border border-danger">
    <div class="bg-secondary text-white  border border-warning border-3 mx-2 p-2">
        @ViewData["Message"]
    </div>
</div>

<div class="jumbotron 
     p-3 
     p-md-5 
     text-white 
     rounded 
     border border-danger
     bg-dark" style="background: url('@Url.Content("~/images/1.png")') no-repeat center center/cover;">


    <div class="col-md-6 px-0 ">

        <h1 class="display-4">Karen's house</h1>

        <p class="lead text-black bg-light bg-opacity-75 w-25">
            A simple example for using BootStrap 5 <strong>jumbotron</strong> with a local image and some textual effects.
        </p>

        <p class="lead mb-0">
            <a href="#" class="text-white font-weight-bold">More</a>
        </p>

    </div>


</div>

